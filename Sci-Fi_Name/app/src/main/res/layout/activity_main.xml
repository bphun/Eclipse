<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weatherapplication.brandonphan.sci_fi_name.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Enter First Name"
        android:textColor="@color/text_color"
        android:id="@+id/firstNameTextView"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="First Name:"
        android:id="@+id/firstNameEditText"
        android:layout_below="@+id/firstNameTextView"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Enter Last Name"
        android:textColor="@color/text_color"
        android:id="@+id/lastNameTextView"
        android:textSize="20sp"
        android:layout_below="@+id/firstNameEditText"
        android:layout_alignParentStart="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Last Name"
        android:maxLines="1"
        android:id="@+id/lastNameEditText"
        android:layout_below="@+id/lastNameTextView"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:enabled="false"
        android:onClick="onbuttonClick"
        android:id="@+id/nextButton"
        android:layout_below="@+id/lastNameEditText"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
